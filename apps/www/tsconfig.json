{
  "extends": "@docsynapse/ts-config/base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@docsynapse/core/*" : ["../../packages/core/src/"],
      "@docsynapse/mist/*" : ["../../packages/mist-kit/"],
      "@docsynapse/dusk/*" : ["../../packages/dusk-kit/"],
      "@mist/*" : ["../../packages/mist-kit/"]
    }
  },
  "include": [
    "./next-env.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
