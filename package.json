{
  "name": "docsynapse",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Dr. Ferdi Sentra",
    "email": "dr.ferdi.sentra@sentra-aether.com",
    "url": "https://github.com/DocSynapse"
  },
  "packageManager": "pnpm@9.10.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "pnpm --filter @docsynapse/backend dev",
    "build": "turbo run build",
    "build:backend": "pnpm --filter @docsynapse/backend build",
    "start": "turbo run start",
    "start:backend": "pnpm --filter @docsynapse/backend start",
    "lint": "turbo run lint",
    "test": "pnpm --filter @docsynapse/backend test",
    "test:coverage": "pnpm --filter @docsynapse/backend test:coverage",
    "registry:build": "turbo run registry:build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "prettier": "3.5.1",
    "prettier-plugin-tailwindcss": "0.6.11",
    "typescript": "^5"
  },
  "dependencies": {
    "turbo": "^2.5.3"
  }
}
